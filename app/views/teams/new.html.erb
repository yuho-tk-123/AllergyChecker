<div class="main teams-new">
  <div class="container">
    <div class="form-heading">新規チーム登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @team.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_tag("/teams/create") do %>
          <p>チーム名</p>
          <input name="name" value="<%= @team.name %>">
          <p>チームid</p>
          <input name="team_id" value="<%= @team.team_id %>">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= @team.password %>">
          <input type="submit" value="新規登録">
        <% end %>

    </div>
  </div>
</div>